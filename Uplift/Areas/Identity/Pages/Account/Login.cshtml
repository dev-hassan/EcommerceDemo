@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

    <div class="login-form pt-4">
        <form id="account" method="post" novalidate="novalidate">
            <h2 class="text-center text-success"><b>Log in</b></h2>
            <div class="form-group">
                <input placeholder="Email..." class="form-control" asp-for="Input.Email">
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-group">
                <input placeholder="Password" class="form-control" asp-for="Input.Password">
                <span class="text-danger" asp-validation-for="Input.Password"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block">Log in</button>
            </div>
            <div class="text-center">
                <a id="forgot-password" style="text-decoration:none;" asp-page="./ForgotPassword">Forgot your password?</a>
            </div>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
